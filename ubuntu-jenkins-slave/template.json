{
    "variables": {
        "subnet_id": "",
        "vpc_id": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-1",
        "vpc_id": "{{user `vpc_id`}}",
        "subnet_id": "{{user `subnet_id`}}",
        "source_ami": "ami-40d28157",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "ubuntu-jenkins-slave-{{timestamp}}"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo apt-get update",
            "sudo apt-get install -y ca-certificates-java openjdk-8-jre-headless docker.io",
            "sudo usermod -aG docker ubuntu",
            "curl -L https://github.com/docker/compose/releases/download/1.9.0/run.sh > /tmp/docker-compose",
            "sudo mv /tmp/docker-compose /usr/local/bin/docker-compose",
            "sudo chmod +x /usr/local/bin/docker-compose"
        ]
    }]
}
